{
  "parser": "typescript-eslint-parser",
  "extends": ["airbnb"],
  "env": {
    "node": true,
    "mocha": true,
    "browser": true
  },
  "rules": {
    // conflicts with 'arrow body style'
    "no-confusing-arrow": "off",

    // due to TypeScript
    "no-undef": "off",
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "react/prop-types": "off"
  }
}
