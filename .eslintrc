extends: airbnb
parser: babel-eslint
parserOptions:
  ecmaFeatures:
    experimentalObjectRestSpread: true
rules:
  react/no-unused-prop-types: 0 # broken on destructuring (https://github.com/yannickcr/eslint-plugin-react/issues/816)
  jsx-a11y/no-static-element-interactions: 0 # we use this a lot
env:
  mocha: true
  browser: true
